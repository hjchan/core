<div class="row">
  <div class="col-sm-3">
    <div>
      <p>Support for Open-Source Software</p>
      <p>A community with {{people_count.total | number}} members.</p>
      <button type="button" class="btn btn-primary" ng-click=openPostBountyModal()>Post Bounty</button>
    </div>

    <div class="activity">    
      <p>Recent Activity</p>
      <timeline-small events="events"></timeline>
    </div>
    
    <div class="top-hunter">
      <div class="mt-3" ng-show="bounty_hunters.length>0">
        <h2>Top Hunters</h2>
      </div>
      <div class="mt-3" ng-repeat="person in bounty_hunters" style="display: flex; flex-direction: row;">
        <div>
          <a class="ml-3 mr-3" ng-href="/people/{{person.slug}}" style="float: left">
            <img ng-src="{{person.image_url_small}}" style="width:60px; height: 60px;" class="img-circle"/>
          </a>
        </div>
        <div class="column-center">
          <a ng-href="/people/{{person.slug}}" class="bounty-hunter-name font-weight-medium">{{person.display_name}}</a>
          <div ng-show="person.bounty_claim_total>0">
            <div class="mt-3">{{person.issue_solved_total}} bounties solved</div>
            <div class="mt-3">{{person.bounty_claim_total | dollars}} rewards</div>
          </div>
        </div>
        <div style="clear:left"></div>
      </div>
    </div>
    
    <div class="top-team">
      <div ng-show="topTeams.length > 0" class="featured-header-icon">
        <h2>Top Teams</h2>
        <a ng-href="/teams/{{team.slug}}" ng-repeat="team in topTeams | limitTo:5 ">
          <img class="img-circle" ng-src="{{team.image_url_small}}" tooltip="{{team.name}}" tooltip-placement="bottom" />
        </a>
      </div>
    </div>
  </div>

  <div class="col-sm-9">
    <div ng-include="'app/bounties/search.html'" ng-controller="BountiesSearchController"></div>
  </div>
</div>