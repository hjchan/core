<style>
  .box-shadow {
    box-shadow: 2px 0 4px -2px #0000001f;
    border: 1px solid transparent;
    border-left: none;
  }

  .landing-page {
    width: 95%;
    margin: 0 auto;
    padding: 0 10px;
  }

  .landing-page > * {
    padding-top: 50px;
  }

  .landing-page > .sidebar > section {
    padding-bottom: 2em;
    margin-bottom: 2em;
    border-bottom: solid 1px #E0E0E0;
  }

  .post-bounty-cta > .cta-btn {
    margin-top: 1em;
    width: 100%;
    box-shadow: 0 2px 3px 0 #00000048;
  }

  .post-bounty-cta > .cta-title {
    color: black;
    margin-top: 0;
  }

  .sidebar {
    padding-right: 20px;
  }

  .sidebar .section-title {
    margin-bottom: 20px;
  }
</style>

<div class="container landing-page">
  <div class="col-sm-3 box-shadow sidebar">
    <section class='post-bounty-cta'>
      <h3 class='cta-title'>Support for Open Source Software</h3>
      <p>A community with {{people_count.total | number}} members hunting for bounties and earn the rewards.</p>
      <a class="btn btn-light-blue cta-btn" ng-click=openPostBountyModal()>
        <strong>POST BOUNTY</strong>
      </a>
    </section>

    <section class="recent-activity">
      <h4 class='section-title'>Recent Activity</h4>
      <timeline-small events="events"></timeline-small>
    </section>

    <section class="top-hunter">
      <div class="mt-3" ng-show="bounty_hunters.length>0">
        <h4 class='section-title'>Top Hunters</h4>
      </div>
      <div class="mt-3" ng-repeat="person in bounty_hunters" style="display: flex; flex-direction: row;">
        <div>
          <a class="ml-3 mr-3" ng-href="/people/{{person.slug}}" style="float: left">
            <img ng-src="{{person.image_url_small}}" style="width:60px; height: 60px;" class="img-circle"/>
          </a>
        </div>
        <div class="column-center">
          <a ng-href="/people/{{person.slug}}" class="bounty-hunter-name font-weight-medium">{{person.display_name}}</a>
          <div ng-show="person.bounty_claim_total>0">
            <div class="mt-3">{{person.issue_solved_total}} bounties solved</div>
            <div class="mt-3">{{person.bounty_claim_total | dollars}} rewards</div>
          </div>
        </div>
        <div style="clear:left"></div>
      </div>
    </section>
      
    <div class="top-team">
      <div class="featured-header-icon">
        <h2>Top Teams</h2>
        <a ng-href="/teams/{{team.slug}}" ng-repeat="team in topTeams">
          <img class="img-circle" ng-src="{{team.image_url_small}}" tooltip="{{team.name}}" tooltip-placement="bottom" />
          <div class="mt-3">{{team.name}}</div>
        </a>
        <div class="mt-3">{{team.hunter_awarded}} hunter awarded</div>
        <div class="mt-3">{{team.total_rewards | dollars}} total rewards</div>
      </div>
    </div>
  </div>
  
  <div class="col-sm-9">
    <div ng-include="'app/bounties/search.html'" ng-controller="BountiesSearchController"></div>
  </div>
</div>
